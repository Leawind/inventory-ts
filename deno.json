{
	"name": "@leawind/inventory",
	"version": "0.8.0",
	"license": "MIT",
	"exports": "./src/index.ts",
	"tasks": {
		"dev": "deno test --watch --parallel",
		"prepare": "deno fmt && deno lint && deno test -A && deno publish --dry-run",
		"build-npm": "deno run -A scripts/build_npm.ts"
	},
	"test": {
		"include": [
			"src/**/*.test.ts",
			"test/**/*.test.ts"
		]
	},
	"publish": {
		"exclude": [
			"example",
			"**/*.test.ts",
			"scripts",
			".github/",
			".vscode/"
		]
	},
	"imports": {
		"@deno/dnt": "jsr:@deno/dnt@^0.41.3",
		"@std": "jsr:@std",
		"@/": "./src/"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": [
			"README.md",
			"deno.json",
			"src/",
			"test/"
		],
		"exclude": []
	}
}
